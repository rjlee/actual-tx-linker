ACTUAL_SERVER_URL=http://localhost:5006
ACTUAL_PASSWORD=your-server-password
ACTUAL_SYNC_ID=your-budget-sync-id
# Optional if your budget is encrypted
# ACTUAL_BUDGET_ENCRYPTION_PASSWORD=your-budget-password

# Where to store Actual's local cache
BUDGET_DIR=./data/budget

# Optional defaults (can also be set via CLI flags)
# LOOKBACK_DAYS=14
# WINDOW_HOURS=72
# MIN_SCORE=0.2
# DRY_RUN=true        # set to false to apply changes
# MAX_LINKS_PER_RUN=50

# Cron scheduling (alternative to INTERVAL_MINS)
# Disable cron scheduling (daemon mode only; default: false)
DISABLE_CRON_SCHEDULING=false
# Cron schedule for daemon (default: every hour on the hour)
LINK_CRON=0 * * * *
# Timezone for cron schedule (default: UTC)
LINK_CRON_TIMEZONE=UTC

# Behavior toggles (CLI flags override these)
# PAIR_MULTIPLES=true         # pair same-day, same-amount multiples deterministically
# DELETE_DUPLICATE=true       # delete the duplicate counterpart after linking
# MERGE_NOTES=true            # append concise match info to kept txn notes
# KEEP=outgoing               # or 'incoming' to keep the incoming side
# CLEARED_ONLY=true           # only consider cleared transactions
# SKIP_RECONCILED=true        # skip reconciled transactions entirely
# PREFER_RECONCILED=true      # when not skipping reconciled, keep the reconciled side

# Logger level: error | warn | info | debug
# LOG_LEVEL=info

# Account filters (exact names or ids)
# INCLUDE_ACCOUNTS=Monzo - Joint Account,Monzo - Deb,Starling - Deb,Starling - Rob
# EXCLUDE_ACCOUNTS=

# Optional: Integrate with actual-events for near-real-time link runs
# Enable the event listener
ENABLE_EVENTS=false
# URL to the actual-events SSE endpoint (e.g. http://localhost:4000/events)
EVENTS_URL=
# Optional bearer token if actual-events requires auth
EVENTS_AUTH_TOKEN=
