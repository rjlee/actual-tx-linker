{
  "name": "actual-tx-linker",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "description": "Link matching inter-account transactions in Actual into proper transfers, and dedupe duplicates.",
  "bin": {
    "actual-tx-linker": "./src/index.js"
  },
  "scripts": {
    "start": "node ./src/index.js",
    "link-once": "node ./src/index.js --mode link-once",
    "daemon": "node ./src/index.js --mode daemon",
    "test": "jest --passWithNoTests",
    "test:coverage": "JEST_COVERAGE=true npm test",
    "test:watch": "jest --watch",
    "prepare": "husky install || true",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@actual-app/api": "^26.1.0",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "pino": "^10.2.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "semantic-release": "^25.0.2"
  },
  "release": {
    "extends": "./release.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
